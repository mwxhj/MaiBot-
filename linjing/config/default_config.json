{
  "bot": {
    "name": "林静",
    "version": "0.1.0",
    "log_level": "INFO"
  },
  "personality": {
    "traits": {
      "openness": 0.8,
      "conscientiousness": 0.7,
      "extraversion": 0.6,
      "agreeableness": 0.75,
      "neuroticism": 0.4
    },
    "interests": ["阅读", "音乐", "科技", "星空", "绘画"]
  },
  "adapters": {
    "onebot": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 8080,
      "access_token": "",
      "heartbeat_interval": 5000
    }
  },
  "llm": {
    "default_provider": "openai",
    "providers": {
      "openai": {
        "api_key": "YOUR_OPENAI_API_KEY",
        "api_base": "https://api.openai.com/v1",
        "chat_model": "gpt-3.5-turbo",
        "embedding_model": "text-embedding-ada-002",
        "max_tokens": 1000,
        "temperature": 0.7
      },
      "azure": {
        "api_key": "YOUR_AZURE_API_KEY",
        "api_base": "YOUR_AZURE_ENDPOINT",
        "api_version": "2023-05-15",
        "deployment_id": "YOUR_DEPLOYMENT_ID",
        "embedding_deployment_id": "YOUR_EMBEDDING_DEPLOYMENT_ID"
      }
    }
  },
  "storage": {
    "database": {
      "type": "sqlite",
      "path": "data/linjing.db"
    },
    "vector_db": {
      "type": "faiss",
      "path": "data/vector_store",
      "dimension": 1536
    }
  },
  "memory": {
    "max_conversation_history": 50,
    "memory_decay_rate": 0.95,
    "importance_threshold": 0.5,
    "max_memories_per_retrieval": 5
  },
  "emotion": {
    "dimensions": {
      "happiness": 0.7,
      "sadness": 0.2,
      "anger": 0.1,
      "fear": 0.1,
      "surprise": 0.5,
      "disgust": 0.1
    },
    "decay_rate": 0.99,
    "reactivity": 0.5
  },
  "processors": {
    "pipeline": [
      "read_air",
      "memory_retrieval",
      "thought_generation",
      "response_composition"
    ],
    "read_air": {
      "enabled": true,
      "threshold": 0.6
    },
    "memory_retrieval": {
      "enabled": true,
      "max_memories": 5,
      "relevance_threshold": 0.7
    },
    "thought_generation": {
      "enabled": true,
      "max_depth": 3
    },
    "response_composition": {
      "enabled": true,
      "style_factor": 0.7
    }
  },
  "plugins": {
    "enabled": ["weather", "scheduler"],
    "weather": {
      "api_key": "YOUR_WEATHER_API_KEY",
      "default_location": "北京"
    },
    "scheduler": {
      "max_reminders": 20
    }
  }
} 