# MaiBot 环境变量配置

# MongoDB 配置
MONGO_USER=maibot
MONGO_PASSWORD=maibotsecret
MONGO_PORT=27017

# Redis 配置
REDIS_PORT=6379

# MaiBot 服务端口
MAIBOT_HTTP_PORT=8081
MAIBOT_WS_PORT=8080           # NapCat将连接到这个WebSocket端口

# NapCat 配置
NAPCAT_PORT=3000              # NapCat管理接口端口
NAPCAT_API_BASE=http://napcat:3000
NAPCAT_AUTH_TOKEN=your_secure_token   # 设置安全令牌，这将与下面的OneBot令牌匹配
NAPCAT_CONFIG=/data/config.yml

# OneBot访问令牌（关键新增配置）
ONEBOT_ACCESS_TOKEN=your_secure_token  # 与NAPCAT_AUTH_TOKEN相同的值

# LLM 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1

# 调试设置
DEBUG=false
LOG_LEVEL=INFO