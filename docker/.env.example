# MaiBot 环境变量配置

# MongoDB 配置
MONGO_URI=mongodb://maibot-mongodb:27017/maibot
MONGO_PORT=27017

# Redis 配置
REDIS_PORT=6379

# MaiBot 服务端口
MAIBOT_HTTP_PORT=8081
MAIBOT_WS_PORT=8080           # NapCat将连接到这个WebSocket端口

# NapCat 配置
NAPCAT_PORT=3000
NAPCAT_API_BASE=http://napcat:3000
NAPCAT_AUTH_TOKEN=""
ONEBOT_ACCESS_TOKEN=""
NAPCAT_UID=1000
NAPCAT_GID=1000
NAPCAT_WEBUI_PORT=6099

# NapCat Framework配置
VNC_PASSWD=安全密码123      # 修改为复杂密码
NAPCAT_VNC_PORT=5900       # VNC端口
NAPCAT_NOVNC_PORT=6081     # 网页VNC端口
NAPCAT_WEBUI_PORT=6099     # WebUI配置端口

# LLM 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1

# 调试设置
DEBUG=false
LOG_LEVEL=INFO